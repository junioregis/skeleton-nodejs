{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/app/src",
      "remoteRoot": "/app/src",
      "protocol": "inspector",
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "smartStep": true,
      "showAsyncStacks": true,
      "sourceMapPathOverrides": {
        "*": "${workspaceFolder}/app/src/*"
      }
    }
  ]
}
